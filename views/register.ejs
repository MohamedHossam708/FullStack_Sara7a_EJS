

<%- include('./Shared/Header.ejs') %>

    <div class="container text-center my-5">
        <div class="user my-3">
            <i class="far fa-edit user-icon"></i>
            <h4 class="login">Register</h4>
        </div>
        <% if (error) { %>
            <div class="alert alert-danger container mx-auto w-50"><%= error %></div>
        <% } %>
        <div class="card p-5 w-50 m-auto">
            <form method="POST" action="/handelRegister">
                <input class="form-control" placeholder="Enter your Name" type="text" name="name">
                <% if ( flashError.find((val)=>val.path[0]=="name")?.message) { %>
                    <div class="alert alert-danger">
                        <%= flashError.find((val)=>val.path[0]=="name")?.message %>
                    </div>
                <% } %>
                <input class="form-control my-2 " placeholder="Enter your email" type="email" name="email">
                <% if ( flashError.find((val)=>val.path[0]=="email")?.message) { %>
                    <div class="alert alert-danger">
                        <%= flashError.find((val)=>val.path[0]=="email")?.message %>
                    </div>
                <% } %>
                <input class="form-control  " placeholder="Enter your Password" type="password" name="password">
                <% if ( flashError.find((val)=>val.path[0]=="password")?.message) { %>
                    <div class="alert alert-danger">
                        <%= flashError.find((val)=>val.path[0]=="password")?.message %>
                    </div>
                <% } %>
                <input class="form-control  my-2" placeholder="Password Confirmation" type="password" name="repassword">
                <% if ( flashError.find((val)=>val.path[0]=="repassword")?.message) { %>
                    <div class="alert alert-danger">
                        <%= flashError.find((val)=>val.path[0]=="repassword")?.message %>
                    </div>
                <% } %>
                <button class="btn btn-default-outline my-4 w-100 rounded">Register</button>
                <a class="btn btn-default-outline" href="/login">Login</a>
            </form>
        </div>
    </div>


    <%- include('./Shared/Footer.ejs') %>

